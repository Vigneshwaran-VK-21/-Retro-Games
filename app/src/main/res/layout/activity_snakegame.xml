<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1F5FE"
    tools:context=".snakegame.snakegame">

    <TextView
        android:id="@+id/game_score_1"
        android:text="Score: 0"
        android:background="#000"
        android:textColor="@color/text_color"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <FrameLayout
        android:id="@+id/game_container_1"
        android:layout_width="@dimen/game_size"
        android:layout_height="@dimen/game_size"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_score_1">
        <com.example.retrogames.snakegame.GameView
            android:id="@+id/game_view1"
            android:background="#000"
            android:layout_width="@dimen/game_size"
            android:layout_height="@dimen/game_size" />
        <TextView
            android:id="@+id/game_status_1"
            android:text="@string/game_over"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <Button
        android:id="@+id/game_control_btn_1"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/game_ctl_btn"
        android:text="Start"
        android:textSize="15dp"
        android:textColor="@color/text_color"
        app:layout_constraintTop_toBottomOf="@+id/game_container_1"
        app:layout_constraintEnd_toEndOf="@+id/game_container_1"
        />
    <Button
        android:id="@+id/up_btn1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/nav_btn_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_container_1" />

    <Button
        android:id="@+id/left_btn1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/nav_btn_bg"
        app:layout_constraintEnd_toStartOf="@+id/up_btn1"
        app:layout_constraintTop_toBottomOf="@+id/up_btn1" />

    <Button
        android:id="@+id/Right_btn1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/nav_btn_bg"
        app:layout_constraintStart_toEndOf="@+id/up_btn1"
        app:layout_constraintTop_toBottomOf="@+id/up_btn1" />

    <Button
        android:id="@+id/down_btn1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/nav_btn_bg"
        app:layout_constraintEnd_toStartOf="@+id/Right_btn1"
        app:layout_constraintStart_toEndOf="@+id/left_btn1"
        app:layout_constraintTop_toBottomOf="@+id/Right_btn1" />




</androidx.constraintlayout.widget.ConstraintLayout>