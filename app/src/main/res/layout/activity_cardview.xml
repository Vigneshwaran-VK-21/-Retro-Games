<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1F5FE"
    tools:context=".cardview">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:background="#E1F5FE"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:background="#E1F5FE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#E1F5FE">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mainicon"
                    android:padding="5sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Retro Games"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:paddingTop="25sp"
                    />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <GridLayout
            android:background="#E1F5FE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:rowCount="1"
            android:columnCount="1"
            >

            <androidx.cardview.widget.CardView
                android:backgroundTint="#E1F5FE"
                android:id="@+id/card_tic1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="10sp"

                >
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="125dp"
                    android:background="#E1F5FE"
                    android:src="@drawable/tic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tic Tac Toc"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:paddingTop="30sp"
                    android:textStyle="bold"
                    android:background="#E1F5FE"
                    android:paddingBottom="30sp"
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/black"/>


            </androidx.cardview.widget.CardView>

        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:rowCount="1"
            android:columnCount="1"
            >

            <androidx.cardview.widget.CardView
                android:backgroundTint="#E1F5FE"
                android:id="@+id/card_sanke2"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="10sp"

                >
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="125dp"
                    android:background="#E1F5FE"
                    android:src="@drawable/snakegame"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Snake Game"
                    android:background="#E1F5FE"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:paddingTop="30sp"
                    android:paddingBottom="30sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/black"/>


            </androidx.cardview.widget.CardView>

        </GridLayout>
        <GridLayout
            android:background="#E1F5FE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:rowCount="1"
            android:columnCount="1"
            >

            <androidx.cardview.widget.CardView
                android:backgroundTint="#E1F5FE"
                android:id="@+id/card_bb3"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="10sp"

                >
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="125dp"
                    android:background="#E1F5FE"
                    android:src="@drawable/brickbreaker"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#E1F5FE"
                    android:text="Brick Breaker"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:paddingTop="30sp"
                    android:paddingBottom="30sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="60dp"
                    android:textColor="@color/black"/>


            </androidx.cardview.widget.CardView>

        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:rowCount="1"
            android:columnCount="1"
            >

            <androidx.cardview.widget.CardView
                android:backgroundTint="#E1F5FE"
                android:id="@+id/card_tetrgame4"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="10sp"

                >
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="125dp"
                    android:background="#E1F5FE"
                    android:src="@drawable/tetrisgame"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="60dp"
                    android:background="#E1F5FE"
                    android:paddingTop="30sp"
                    android:paddingBottom="30sp"
                    android:text="Tetris Game"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>

        </GridLayout>

    </LinearLayout>

</ScrollView>